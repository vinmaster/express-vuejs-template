{
  "name": "express-vuejs-template",
  "version": "2.0.0",
  "description": "Express + Vuejs Template",
  "private": true,
  "engines": {
    "node": "~12.18.0",
    "npm": "~6.10.0"
  },
  "scripts": {
    "start": "npm run server",
    "server": "node build/index.js",
    "server-prod": "NODE_ENV=production npm start",
    "build": "npm run clean && npm run build-client && npm run build-server",
    "build-client": "vue-cli-service build client/index.ts",
    "build-server": "tsc --build tsconfig.server.json",
    "clean": "rm -rf build",
    "dev": "concurrently \"npm:dev-*\"",
    "dev-client": "echo 'TODO'",
    "dev-server": "ts-node-dev --project tsconfig.server.json --inspect=4321 --respawn --no-notify ./server/index.ts",
    "test-watch": "cross-env NODE_ENV=test TS_NODE_PROJECT=tsconfig.server.json mocha -r ts-node/register --watch --watch-files server, tests/**/*.spec.ts",
    "test": "cross-env NODE_ENV=test TS_NODE_PROJECT=tsconfig.server.json mocha -r ts-node/register \"tests/**/*.spec.ts\"",
    "heroku-postbuild": "npm run build-server && cd client && npm i && npm run build && cd .. && cp -R client/dist build/public"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/helmet": "0.0.48",
    "@types/hpp": "^0.2.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.1",
    "@types/ms": "^0.7.31",
    "@types/node": "^14.11.2",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/pino": "^6.3.1",
    "@types/pino-http": "^5.0.5",
    "@types/serve-favicon": "^2.5.0",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.33",
    "@types/uuid": "^8.3.0",
    "bcrypt": "^5.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "ejs": "^3.1.5",
    "express": "^5.0.0-alpha.8",
    "express-validator": "^6.6.1",
    "helmet": "^4.1.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "ms": "^2.1.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.3.3",
    "rate-limiter-flexible": "^2.1.10",
    "reflect-metadata": "^0.1.13",
    "serve-favicon": "^2.5.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "typeorm": "^0.2.26",
    "typescript": "^4.0.3",
    "uuid": "^8.3.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@types/supertest": "^2.0.10",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "mocha": "^8.1.3",
    "supertest": "^5.0.0",
    "ts-node-dev": "^1.0.0-pre.63"
  }
}
