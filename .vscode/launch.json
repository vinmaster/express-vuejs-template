  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach Dev Server",
      "protocol": "inspector",
      "port": 4321,
      "restart": true,
      "cwd": "${workspaceRoot}"
      // "program": "${workspaceFolder}\\server",
      // "outFiles": [
      //   "${workspaceFolder}/**/*.js"
      // ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
          "-r", "ts-node/register",
          // "-u", "tdd",
          "--timeout", "999999",
          "--colors", "--recursive",
          "${workspaceFolder}/tests/**/*.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart"
      // "console": "integratedTerminal",
      // "internalConsoleOptions": "neverOpen",
      // "protocol": "inspector"
    }
  ]
}